{
  "name": "otk-master-search",
  "version": "1.0.0",
  "type": "module",
  "description": "OTK Master Search data scraper and web app",
  "main": "app.js",
  "scripts": {
    "scrape:items": "node build-items.v3.mjs --out ./data --chunk 80",
    "scrape:items:dry": "node build-items.v3.mjs --out ./data --chunk 80 --dry --debug",
    "update:manifest": "node update-manifest.mjs --manifest ./manifest.json --data ./data --pattern \"otk-items-chunk-*.json\"",
    "start": "npx http-server . -c-1"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "fs-extra": "^11.1.1",
    "node-fetch": "^3.3.2",
    "slugify": "^1.6.6",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "http-server": "^14.1.1"
  }
}
